<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Pantalla_Foro_Estudiante">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_volver18"
        android:layout_width="132dp"
        android:layout_height="45dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/round_button_background"
        android:fontFamily="sans-serif-medium"
        android:text="volver"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/evaluarEvento" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEvaluarEventEst"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:background="@drawable/round_button_white_background"
        android:fontFamily="sans-serif-medium"
        android:text="Evaluar Evento"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.629" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPreguntasEst"
        android:layout_width="152dp"
        android:layout_height="49dp"
        android:background="@drawable/round_button_white_background"
        android:fontFamily="sans-serif-medium"
        android:text="Preguntas"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPropuestaEst"
        android:layout_width="154dp"
        android:layout_height="53dp"
        android:background="@drawable/round_button_white_background"
        android:fontFamily="sans-serif-medium"
        android:text="Propuesta de Evento"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.398" />

    <TextView
        android:id="@+id/texto"
        android:layout_width="325dp"
        android:layout_height="35dp"
        android:fontFamily="sans-serif-medium"
        android:text="¡Déjanos tus propuestas y opiniones!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.264" />

    <TextView
        android:id="@+id/textoForoEst"
        android:layout_width="339dp"
        android:layout_height="58dp"
        android:fontFamily="sans-serif-medium"
        android:text="Foro de discusión"
        android:textAlignment="center"
        android:textColor="#94DFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182" />
</androidx.constraintlayout.widget.ConstraintLayout>